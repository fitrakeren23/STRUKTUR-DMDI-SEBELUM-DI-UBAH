<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /dmdi/

  # Blok akses langsung ke system
  RewriteRule ^system/(.*)$ - [F,L,NC]

  # Lewatkan file atau direktori fisik
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Route ke index.php (hilangkan tanda tanya lama)
  RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>